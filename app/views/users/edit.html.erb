<% provide(:title, 'Edit Account') %>
<div class="content">
    <div class="container-fluid">
        <h1>Update my account</h1>
        <div class="row">
            <div class="span3 offset2">
                <%= form_for @user, html: {multipart: true} do |form| %>	
                    <%= render 'shared/error_messages' %>
    
                    <%= form.label :name, "Name: " %>
                    <%= form.text_field :name %>
    
                    <%= form.label :email, "Email: " %>
                    <%= form.text_field :email %>
    
                    <%= form.label :username, "Username: "%>
                    <%= form.text_field :username %>
                    
                    <%= image_tag(@user.avatar_url) if @user.avatar? %>
                    <%= form.file_field :avatar %>
                    <%= form.hidden_field :avatar_cache %>
					
					<%- if @user.avatar_url %>                         
						<div class="check_box">               
							<span class="remove_avatar"><%= form.label :remove_avatar, "Remove image? "%></span>
							<span class="remove_avatar box"><%= form.check_box :remove_avatar %></span>
						</div>
					<% end %>
            
                    <%= form.label :password, "Password: " %>
                    <%= form.password_field :password %>
            
                    <%= form.label :password_confirmation, "Confirm your password:" %>
                    <%= form.password_field :password_confirmation %>
            
                    <div class="center"><%= form.submit "Update", class: "btn btn-large btn-primary" %></div>
                <% end%>
            </div>
        </div>
    </div>
</div>