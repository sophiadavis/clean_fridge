<h1><%= @recipe["name"] %></h1>

<div class="content">
    <div class="row container-fluid">
        <div class="span6 center">
            <div class="hero-unit">
                <%= image_tag(@recipe["images"][0]["hostedLargeUrl"], alt: @recipe["name"]) %>
            </div>
            <h2 class="center"><%= link_to "View Recipe", @recipe["source"]["sourceRecipeUrl"]%></h2>
        </div>
        <div class="span6 offset2">
            <div class="entry">
                <h2>Ingredients:</h2>
                <ul>
                    <% @recipe["ingredientLines"].each do |i| %>
                        <li><%= i %></li>
                    <% end %>
                </ul>
                <p><%= "Yield: #{ @recipe["yield"] }" unless @recipe["yield"].empty? %></p>
                <p><%= "Total cook time: #{ distance_of_time(@recipe["totalTimeInSeconds"].to_i) }" unless @recipe["totalTimeInSeconds"].nil? %></p>
                <p><%= "Rating: #{ @recipe["rating"] }/5" unless @recipe["rating"].nil? %></p>
                <p>
                    Tags:
                    <% if @recipe["attributes"].empty? %>
                        none
                    <% else %>
                        <ul>
                            <% if @recipe["attributes"]["course"] %>
                                <% @recipe["attributes"]["course"].each do |c| %>
                                    <li><%= c %></li>
                                <% end %>
                            <% end %>
                            <% if @recipe["attributes"]["cuisine"] %>
                                <% @recipe["attributes"]["cuisine"].each do |c| %>
                                    <li><%= c %></li>
                                <% end %>
                            <% end %>
                            <% if @recipe["attributes"]["holiday"] %>    
                                <% @recipe["attributes"]["holiday"].each do |h| %>
                                    <li><%= h %></li>
                                <% end %>
                            <% end %>
                        </ul>
                    <% end %>
                </p>
            </div>
        </div>
    </div>
    <div class="row container-fluid">
        <div class="span6">
        </div>
        <div class="span6 offset1">
        </div>
    </div>
    <div class="row center bottom">
        <div class="span6">
            Information powered by <%= image_tag(@recipe["attribution"]["logo"], alt: "Yummly logo") %></p>
        </div>
        <div class="span6 offset2">
            Recipe from <%= link_to @recipe["source"]["sourceDisplayName"], @recipe["source"]["sourceSiteUrl"] %>.
        </div>
    </div>
</div>